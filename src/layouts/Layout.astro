---
interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;

import Header from '../components/Header.astro';
import '@fontsource-variable/onest';
---

<!doctype html>
<html lang="es" class="">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<script src="/theme.js" is:inline></script>
	</head>
	<body>
		<div class="fixed top-0 left-0 z-[-2] min-h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    height: 100vh;
    transition: background 0.3s, color 0.3s;
  }

  /* ðŸŽ¯ Modo claro (sin .dark) */
  html:not(.dark) body {
    background: #f9f9fb; /* Fondo claro similar al de midudev */
    color: #1e1e1e;       /* Texto oscuro */
  }

  /* ðŸŒ™ Modo oscuro */
  .dark body {
    background: #050505;
    color: #ffffff;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
