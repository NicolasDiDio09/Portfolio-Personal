<script>
  let lastScroll = 0;
  let headerVisible = true;

  // Función para manejar el scroll
  const handleScroll = () => {
    const currentScroll = window.scrollY;
    const header = document.querySelector('header');
    if (header) {
        header.addEventListener('mouseenter', handleMouseEnter);
        }


    if (currentScroll > lastScroll) {
      // Usuario se desplaza hacia abajo: oculta el header
      header.classList.add('-translate-y-full', 'opacity-0');
      headerVisible = false;
    } else {
      // Usuario se desplaza hacia arriba: muestra el header
      if (header) {
        header.classList.remove('-translate-y-full', 'opacity-0');
        }
      headerVisible = true;
    }

    lastScroll = currentScroll;
  };

  // Mostrar el header al hacer hover
  const handleMouseEnter = () => {
    const header = document.querySelector('header');
    if (!headerVisible) {
      header.classList.remove('-translate-y-full', 'opacity-0');
    }
  };

  // Escuchar eventos después de que la página cargue
  if (typeof window !== 'undefined') {
    window.addEventListener('scroll', handleScroll);
    document.querySelector('header').addEventListener('mouseenter', handleMouseEnter);
  }
</script>

