<script>
  let lastScroll = 0;
  let headerVisible = true;

  // Función para manejar el scroll
  const handleScroll = () => {
    const header = document.querySelector('header'); // Selecciona el header solo una vez
    if (!header) return; // Asegúrate de que el elemento existe antes de manipularlo

    const currentScroll = window.scrollY;

    if (currentScroll > lastScroll && headerVisible) {
      // Usuario se desplaza hacia abajo: oculta el header
      header.classList.add('-translate-y-full', 'opacity-0');
      headerVisible = false;
    } else if (currentScroll < lastScroll && !headerVisible) {
      // Usuario se desplaza hacia arriba: muestra el header
      header.classList.remove('-translate-y-full', 'opacity-0');
      headerVisible = true;
    }

    lastScroll = currentScroll;
  };

  // Mostrar el header al hacer hover
  const handleMouseEnter = () => {
    const header = document.querySelector('header'); // Selecciona el header solo una vez
    if (header && !headerVisible) {
      header.classList.remove('-translate-y-full', 'opacity-0');
    }
  };

  // Escuchar eventos después de que la página cargue
  if (typeof window !== 'undefined') {
    const header = document.querySelector('header'); // Selecciona el header una vez
    if (header) {
      // Solo registra los eventos si el elemento existe
      window.addEventListener('scroll', handleScroll);
      header.addEventListener('mouseenter', handleMouseEnter);
    }
  }
</script>

